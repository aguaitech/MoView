{
  "name": "moview",
  "version": "1.0.0",
  "description": "Desktop guardian that switches you back to work when someone walks in while you are gaming.",
  "main": "dist/main/index.js",
  "author": "AGUAI Tech",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:main dev:preload dev:renderer dev:electron",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:preload": "tsc -p tsconfig.preload.json --watch --preserveWatchOutput",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:electron": "wait-on tcp:5173 dist/main/index.js dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "run-s build:main build:preload build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "typecheck": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && tsc -p tsconfig.renderer.json",
    "test": "run-s build:main test:run",
    "test:run": "node --test tests/settingsUtils.test.js",
    "dist": "rm -rf release && npm run build && electron-builder -mw",
    "dist:mac": "rm -rf release && npm run build && APPLE_DMG_DISABLE_APFS=1 electron-builder --mac",
    "dist:win": "rm -rf release && npm run build && electron-builder --win"
  },
  "dependencies": {
    "@vladmandic/human": "^3.3.6",
    "electron-log": "^4.4.8",
    "electron-store": "^9.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "productName": "MoView",
    "appId": "tech.aguai.moview",
    "copyright": "Copyright Â© 2025 AGUAI Tech",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "dist/shared/**/*",
      "package.json",
      "!**/*.map",
      "!dist/mac-universal-*"
    ],
    "extraResources": [
      {
        "from": "public/human-models",
        "to": "human-models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "format": "UDZO"
    }
  }
}
